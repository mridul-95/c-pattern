   #include <stdio.h>
   void main()
   {
    int m='A',n=1,c=4,x=1; 
    for(int i=1;i<=5;i++)
    {
        for(int j=0;j<c;j++)
        printf(" ");
        for(int j=1;j<=x;j++)
        {
             if(i%2==0)
            {
                if(j%2==0)
                printf(" ");
                else
                {
                printf("%c",m);
                m++;
                }
            }
            else
            {
                if(j%2==0)
                printf(" ");
                else
                {
                printf("%d",n);
                n++;
                }
            }
        }
        printf("\n");
        c--;
        x+=2;
    }
   }
